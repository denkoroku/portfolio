<%= form_for(@portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class:'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class:'form-control' %>
    </div>

    <div class="form-group">
      <label class="btn btn-secondary">
        Upload Main Image
        <%= form.file_field :main_image, style: 'display:none;'  %>
      </label>
    </div>

    <div class="form-group">
      <label class="btn btn-secondary">
        Upload Thumb Image
        <%= form.file_field :thumb_image, style: 'display:none;'  %>
      </label>
    </div>

  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class:'form-control', rows:14 %>
    </div>
  </div>
</div>
<hr>



<h2>Technologies Used</h2>
<div class="form-group">
  <%= form.fields_for :technologies do |technology_form| %>
  <div>
    <%= technology_form.label :name %>
    <%= technology_form.text_field :name, class:'form-control' %>
  </div>
  <% end %>
</div>

<div class="actions">
  <%= form.submit class: 'btn btn-primary btn-block'%>
</div>

<% end %>

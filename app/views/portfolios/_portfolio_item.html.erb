<div class="col-md-4" id="card">
  <div class="card mb-4 shadow-sm">
    
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
      <p class="card-text"><%= portfolio_item.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'Edit', edit_portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary", type:"button" if logged_in?(:site_admin)%>
          <%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-secondary", type:"button" if logged_in?(:site_admin)%>
        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now)%> ago</small>
      </div>
    </div>
  </div>
</div>

<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to @blog.title, @blog %></h2>
  <p class="blog-post-meta"> <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</p>

  <p><%= @blog.body %></p>

<%= link_to @blog.status, toggle_status_blog_path(@blog) %>|
<%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin)%> |
<%= link_to 'Back', blogs_path %>
